<% if !flash[:notice].blank? %>
  <div class='notice'>
    <%= flash[:notice]%>
  </div>
  <% end %>

<%= link_to("<< Back to Link", pages_path, :class => 'back-link') %>

<div class="pages show">
  <h2>Pages</h2>
  <%= link_to('Add new page', '#', :class => 'action new')%>

  <table summary="Pages detail view">
    <tr>
      <th>Name</th>
      <td><%= @page.name %></td>
    </tr>
    <tr>
      <th>Subject ID</th>
      <td><%= @page.subject_id %></td>
    </tr>
    <tr>
      <th>Permalink</th>
      <td><%= @page.permalink %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @page.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @page.visible ? true : false %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @page.created_at %></td>
    </tr>
    <tr>
      <th>Updated at</th>
      <td><%= @page.updated_at %></td>
    </tr>
  </table>
</div>
