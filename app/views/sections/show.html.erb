<% @page_title = "All Sections" %>
<%= link_to("<< Back to Link", sections_path, :class => 'back-link') %>

<div class="section show">
  <h2>Subject</h2>
  <%= link_to('Add new section', '#', :class => 'action new')%>

  <table summary="Section detail view">
    <tr>
      <th>Page id </th>
      <td><%= @section.page_id %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @section.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @section.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @section.visible ? true : false %></td>
    </tr>
    <tr>
      <th>Content type</th>
      <td><%= @section.content_type %></td>
    </tr>
    <tr>
      <th>Content</th>
      <td><%= @section.content %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @section.created_at %></td>
    </tr>
    <tr>
      <th>updated_at</th>
      <td><%= @section.updated_at %></td>
    </tr>
  </table>
</div>
